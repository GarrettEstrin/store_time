<h1>Community Story Time</h1>
<hr>



<!-- logged in/out links -->
<% if logged_in? %>
<%= link_to "Start a story", new_story_path %>
<br>
<%= link_to 'Log Out', logout_path %> |
Hello <%= current_user.name %>
<% else %>
<%= link_to 'Log In', new_session_path %>
or <%= link_to "Sign Up", new_user_path %>
<br>
<% end %>
<hr>
<h2>Recent Stories</h2>

<% @stories.each do |s| %>
<h3><%= link_to s.title, story_path(s.id) %></h3>
<hr>
<% end %>
