<h1> <%= link_to "Community Story Time", stories_path %> </h1>
<hr>
<div class="col-md-12">
  <!-- logged in/out links -->
  <% if logged_in? %>
  <%= link_to "Start a story", new_story_path %>
  <br>
  <%= link_to 'Log Out', logout_path %> |
  Hello <%= current_user.name %>
  <% else %>
  <p id='login'>Log In</p>
  or <%= link_to "Sign Up", new_user_path %>
  <br>
  <% end %>
  <hr>
</div>

<div class="login col-md-12">
<h1>Log In</h1>
<hr>
<%= form_tag sessions_path do %>
Email: <%= text_field_tag :email %>
<br>
Password: <%= password_field_tag :password, nil %>
<br>
<%= submit_tag "Log In" %>
<% end %>
</div>
