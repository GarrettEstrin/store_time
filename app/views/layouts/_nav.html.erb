<div class="col-xl-12 navigation">
<!-- what the user sees if they are NOT logged in -->
<% if not logged_in? %>
<div class="col-xl-8 col-lg-6">
  <h1><kbd class='big-text'> <%= link_to "community story time ", stories_path %> </kbd></h1>
</div>
<div class="col-xl-4 col-lg-6 nav_form">
  <%= form_tag sessions_path do %>
  <strong>Login | Email:</strong> <%= text_field_tag :email, nil, :required => true %>
  <strong>Password: </strong><%= password_field_tag :password, nil, :required => true %>
  <%= submit_tag "log in", :class => 'kbd'%>
  <% end %>
  or
  <kbd class="text-white"><%= link_to "sign up", new_user_path %></kbd>
</div>
<!-- What the user sees when they are logged in -->
<% else %>
<div class="col-lg-6">
<h1><kbd class='big-text'> <%= link_to "community story time ", stories_path %> </kbd></h1>
</div>
<div class="col-lg-4 nav_start">
  <button type="button" class="btn btn-default navbar-btn"><%= link_to "Start a story", new_story_path %></button>
</div>
<div class="col-lg-2 nav_form">
  Hello <%=link_to current_user.name, user_path(current_user.id) %> |
  <%= link_to 'log out', logout_path %>
</div>

<% end %>
</div>
